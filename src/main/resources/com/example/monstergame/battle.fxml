<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.monstergame.BattleController">
   <Circle fx:id="playerCircle" fill="WHITE" layoutX="114.0" layoutY="172.0" radius="31.0" stroke="BLACK"
           strokeType="INSIDE" strokeWidth="2.0"/>
   <Circle fx:id="enemyCircle" fill="WHITE" layoutX="486.0" layoutY="45.0" radius="31.0" stroke="BLACK"
           strokeType="INSIDE" strokeWidth="2.0"/>
   <ProgressBar fx:id="playerHealthBar" layoutX="14.0" layoutY="214.0" prefWidth="200.0" progress="1.0"/>
   <ProgressBar fx:id="enemyHealthBar" layoutX="386.0" layoutY="84.0" prefWidth="200.0" progress="1.0"/>
   <Label fx:id="playerHealthLabel" layoutX="21.0" layoutY="241.0" prefHeight="17.0" prefWidth="200.0"
          text="HP:    21/24">
      <font>
         <Font name="System Bold" size="12.0"/>
      </font>
   </Label>
   <Label fx:id="enemyHealthLabel" layoutX="386.0" layoutY="102.0" prefHeight="17.0" prefWidth="213.0"
          text="HP:    21/24">
      <font>
         <Font name="System Bold" size="12.0"/>
      </font>
   </Label>
   <TextField fx:id="nameMonsterTextField" layoutX="376.0" layoutY="237.0" onAction="#onNameEntered" prefHeight="25.0"
              prefWidth="210.0" promptText="New Monster name"/>
   <ProgressBar fx:id="playerXpBar" layoutX="14.0" layoutY="230.0" prefHeight="11.0" prefWidth="200.0" progress="0.81"/>
   <Label fx:id="battleLogLabel" alignment="TOP_LEFT" layoutX="14.0" layoutY="271.0" prefHeight="123.0"
          prefWidth="364.0" text="Wild monster appeared!">
      <font>
         <Font size="14.0"/>
      </font>
   </Label>
   <HBox layoutX="383.0" layoutY="122.0" prefHeight="11.0" prefWidth="200.0">
      <Circle fx:id="trainerCircle1" fill="WHITE" radius="9.0" stroke="BLACK" strokeType="INSIDE" strokeWidth="2.0"/>
      <Circle fx:id="trainerCircle2" fill="WHITE" radius="9.0" stroke="BLACK" strokeType="INSIDE" strokeWidth="2.0"/>
      <Circle fx:id="trainerCircle3" fill="WHITE" radius="9.0" stroke="BLACK" strokeType="INSIDE" strokeWidth="2.0"/>
      <Circle fx:id="trainerCircle4" fill="WHITE" radius="9.0" stroke="BLACK" strokeType="INSIDE" strokeWidth="2.0"/>
      <Circle fx:id="trainerCircle5" fill="WHITE" radius="9.0" stroke="BLACK" strokeType="INSIDE" strokeWidth="2.0"/>
      <Circle fx:id="trainerCircle6" fill="WHITE" radius="9.0" stroke="BLACK" strokeType="INSIDE" strokeWidth="2.0"/>
   </HBox>
   <HBox layoutX="376.0" layoutY="274.0" prefHeight="101.0" prefWidth="213.0" spacing="10.0">
      <VBox prefHeight="101.0" prefWidth="97.0" spacing="5.0">
         <Button fx:id="move1Button" mnemonicParsing="false" onMouseClicked="#onMove1" prefHeight="25.0"
                 prefWidth="100.0" text="Flamethrower">
            <font>
               <Font name="System Bold" size="12.0"/>
            </font>
         </Button>
         <Button fx:id="move2Button" mnemonicParsing="false" onMouseClicked="#onMove2" prefHeight="25.0"
                 prefWidth="100.0" text="Thunderbolt">
            <font>
               <Font name="System Bold" size="12.0"/>
            </font>
         </Button>
         <Button fx:id="move3Button" mnemonicParsing="false" onMouseClicked="#onMove3" prefHeight="25.0"
                 prefWidth="100.0" text="Hurricane">
            <font>
               <Font name="System Bold" size="12.0"/>
            </font>
         </Button>
         <Button fx:id="move4Button" mnemonicParsing="false" onMouseClicked="#onMove4" prefHeight="25.0"
                 prefWidth="100.0" text="Avalanche">
            <font>
               <Font name="System Bold" size="12.0"/>
            </font>
         </Button>
      </VBox>
      <VBox prefHeight="200.0" prefWidth="100.0">
         <Button fx:id="fightButton" mnemonicParsing="false" onAction="#onFightButton" prefHeight="30.0"
                 prefWidth="100.0" text="Fight">
            <font>
               <Font name="System Bold" size="14.0"/>
            </font>
         </Button>
         <Button fx:id="teamButton" mnemonicParsing="false" onAction="#onTeamButtonClicked" prefHeight="30.0"
                 prefWidth="100.0" text="Team">
            <font>
               <Font name="System Bold" size="14.0"/>
            </font>
         </Button>
         <Button fx:id="bagButton" mnemonicParsing="false" onAction="#onBagButtonClicked" prefHeight="30.0"
                 prefWidth="100.0" text="Bag">
            <font>
               <Font name="System Bold" size="14.0"/>
            </font>
         </Button>
         <Button fx:id="runButton" mnemonicParsing="false" onAction="#onRunButtonClicked" prefHeight="30.0"
                 prefWidth="100.0" text="Run">
            <font>
               <Font name="System Bold" size="14.0"/>
            </font>
         </Button>
      </VBox>
   </HBox>
</AnchorPane>
